.RadialControl
  position relative

  &-knob
    z-index 1000
    background-color #fff
    width 44px
    height 44px
    position absolute
    left calc(50% - 22px)
    top calc(50% - 22px)
    touch-action none

    &-circle
      border-radius 100px

    &:hover
      cursor move

  &-circle
    stroke red
    stroke-width 3px

    &-container
      transform scaleY(-1)

    &-background
      stroke gray

  &-children
    top 50%
    left 50%
    transform translate(-50%, -50%)
    position absolute
